{
  "compilerOptions": {
    "module": "preserve",
    "noEmit": true,
    "lib": ["ES2023"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "checkJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noImplicitOverride": true,
    "allowImportingTsExtensions": true
  }
}
