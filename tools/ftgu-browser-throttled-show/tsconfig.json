{
  "compilerOptions": {
    "module": "preserve",
    "lib": ["ES2023", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "checkJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noImplicitOverride": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
